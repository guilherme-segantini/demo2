{
  "_version": "2.0.0",
  "$schema": "https://raw.githubusercontent.com/nicm2/sap.ui.manifest/main/manifest-2.0.json",
  "sap.app": {
    "id": "tech.trends.radar",
    "type": "application",
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "dataSources": {
      "radarData": {
        "uri": "localService/mock_radar.json",
        "type": "JSON"
      }
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "sap-icon://radar-chart"
    },
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "rootView": {
      "viewName": "tech.trends.radar.view.App",
      "type": "XML",
      "id": "app"
    },
    "dependencies": {
      "minUI5Version": "1.136.0",
      "libs": {
        "sap.m": {},
        "sap.ui.core": {},
        "sap.ui.layout": {},
        "sap.f": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "tech.trends.radar.i18n.i18n"
        }
      },
      "radar": {
        "type": "sap.ui.model.json.JSONModel",
        "dataSource": "radarData"
      }
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "viewPath": "tech.trends.radar.view",
        "controlId": "appContainer",
        "controlAggregation": "pages"
      },
      "routes": [
        {
          "name": "radar",
          "pattern": "",
          "target": "radar"
        }
      ],
      "targets": {
        "radar": {
          "viewName": "RadarView",
          "viewId": "radarView",
          "viewLevel": 1
        }
      }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    }
  }
}
